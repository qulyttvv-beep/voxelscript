{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "VoxelScript",
  "scopeName": "source.voxelscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#variables" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.voxelscript",
          "match": "//.*$"
        },
        {
          "name": "comment.block.voxelscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.voxelscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.voxelscript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.voxelscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.voxelscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.voxelscript",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.voxelscript",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.float.voxelscript",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.voxelscript",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.voxelscript",
          "match": "\\b(if|else|elif|loop|while|for|in|break|continue|return|match|case|default)\\b"
        },
        {
          "name": "keyword.declaration.voxelscript",
          "match": "\\b(let|const|var|fn|function|class|struct|enum|import|export|from|as|async|await)\\b"
        },
        {
          "name": "keyword.operator.voxelscript",
          "match": "\\b(and|or|not|is|in)\\b"
        },
        {
          "name": "storage.type.voxelscript",
          "match": "\\b(int|float|string|bool|array|object|null|void|any)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.voxelscript",
          "match": "\\b(fn|function)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.declaration.voxelscript" },
            "2": { "name": "entity.name.function.voxelscript" }
          }
        },
        {
          "name": "meta.function-call.voxelscript",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.voxelscript" }
          }
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.io.voxelscript",
          "match": "\\b(print|println|input|read|write|readFile|writeFile|appendFile|deleteFile|copyFile|exists|isFile|isDir|mkdir|readDir)\\b"
        },
        {
          "name": "support.function.builtin.math.voxelscript",
          "match": "\\b(abs|floor|ceil|round|sqrt|pow|sin|cos|tan|asin|acos|atan|atan2|log|log10|log2|exp|min|max|random|clamp|lerp|map|degrees|radians|factorial|fibonacci|gcd|lcm|isPrime|sign|trunc)\\b"
        },
        {
          "name": "support.function.builtin.string.voxelscript",
          "match": "\\b(len|length|upper|lower|trim|split|join|replace|substr|substring|indexOf|lastIndexOf|startsWith|endsWith|includes|contains|charAt|charCodeAt|fromCharCode|repeat|padStart|padEnd|reverse|capitalize|camelCase|snakeCase|count|format)\\b"
        },
        {
          "name": "support.function.builtin.array.voxelscript",
          "match": "\\b(push|pop|shift|unshift|slice|splice|concat|reverse|sort|map|filter|reduce|forEach|find|findIndex|every|some|includes|indexOf|flat|flatten|unique|chunk|zip|shuffle|first|last|isEmpty|sum|avg|product|median|range|fill)\\b"
        },
        {
          "name": "support.function.builtin.object.voxelscript",
          "match": "\\b(keys|values|entries|assign|freeze|clone|merge|pick|omit|invert|hasKey|type|typeof|instanceof)\\b"
        },
        {
          "name": "support.function.builtin.time.voxelscript",
          "match": "\\b(now|date|time|year|month|day|hour|minute|second|timestamp|format_date|sleep|delay|setTimeout|setInterval|clearTimeout|clearInterval)\\b"
        },
        {
          "name": "support.function.builtin.functional.voxelscript",
          "match": "\\b(compose|pipe|curry|memoize|debounce|throttle|once|partial|flip|negate)\\b"
        },
        {
          "name": "support.function.builtin.async.voxelscript",
          "match": "\\b(parallel|sequence|timeout|interval|retry|fetch|get|post)\\b"
        },
        {
          "name": "support.function.builtin.system.voxelscript",
          "match": "\\b(exec|exit|args|env|cwd|platform|uuid|hash|base64encode|base64decode|hexEncode|hexDecode)\\b"
        },
        {
          "name": "support.function.builtin.conversion.voxelscript",
          "match": "\\b(int|float|str|string|bool|array|toInt|toFloat|toString|toBool|toArray|parse|stringify|JSON)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.voxelscript",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.voxelscript",
          "match": "\\b(null|nil|none|undefined)\\b"
        },
        {
          "name": "constant.language.math.voxelscript",
          "match": "\\b(PI|E|TAU|PHI|SQRT2|INF|NEG_INF|NaN|Infinity)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.voxelscript",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.voxelscript",
          "match": "(=|\\+=|-=|\\*=|/=|%=|\\^=|&=|\\|=)"
        },
        {
          "name": "keyword.operator.arithmetic.voxelscript",
          "match": "(\\+|-|\\*|/|%|\\^|\\*\\*)"
        },
        {
          "name": "keyword.operator.logical.voxelscript",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.voxelscript",
          "match": "(&|\\||~|<<|>>)"
        },
        {
          "name": "keyword.operator.spread.voxelscript",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.arrow.voxelscript",
          "match": "(=>|->)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.voxelscript",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
